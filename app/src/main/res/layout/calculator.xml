<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <!--NUMBERS-->

    <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_alignParentLeft="true"/>

    <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_toRightOf="@id/one"/>

    <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_toRightOf="@id/two"/>

    <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_alignLeft="@id/one"
            android:layout_below="@id/one"/>

    <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_alignLeft="@id/two"
            android:layout_below="@id/two"/>

    <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_alignLeft="@id/three"
            android:layout_below="@id/three"/>

    <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_alignLeft="@id/one"
            android:layout_below="@id/four"/>

    <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_alignLeft="@id/two"
            android:layout_below="@id/five"/>

    <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_alignLeft="@id/three"
            android:layout_below="@id/six"/>

    <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignLeft="@id/eight"
            android:layout_below="@id/eight"/>

    <!--for float numbers-->

    <Button
            android:id="@+id/decimalPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:layout_alignLeft="@id/one"
            android:layout_below="@id/seven"/>

    <!--FEATURES-->

    <Button
            android:id="@+id/add"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="+"/>

    <Button
            android:id="@+id/sub"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:layout_alignRight="@id/add"
            android:layout_below="@id/add"/>

    <Button
            android:id="@+id/mul"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_alignRight="@id/add"
            android:layout_below="@id/sub"/>

    <Button
            android:id="@+id/div"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:layout_alignRight="@id/add"
            android:layout_below="@id/mul"/>

    <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:layout_alignLeft="@id/three"
            android:layout_below="@id/nine"/>

    <Button
            android:id="@+id/equals"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="="
            android:layout_below="@id/cancel"/>

</RelativeLayout>